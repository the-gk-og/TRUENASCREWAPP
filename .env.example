# ShowWise Application Configuration
# Copy this file to .env and update with your actual values

# ==================== Flask Configuration ====================
FLASK_ENV=production
SECRET_KEY=your-secret-key-here-change-this
SESSION_DURATION=1w  # 1w, 7d, 24h, 30m, etc.

# ==================== Database Configuration ====================
# Using SQLite by default (production_crew.db)
# For PostgreSQL: postgresql://user:password@localhost/showwise_db

# ==================== Mail Configuration ====================
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-specific-password
MAIL_DEFAULT_SENDER=noreply@showwise.local

# ==================== Organization Configuration ====================
ORGANIZATION_SLUG=your-org-slug
ORG_SLUG=your-org-slug
MAIN_SERVER_URL=https://sfx-crew.com

# ==================== Discord Integration ====================
DISCORD_BOT_TOKEN=your-discord-bot-token
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/YOUR_WEBHOOK_ID/YOUR_WEBHOOK_TOKEN
DISCORD_GUILD_ID=your-guild-id

# ==================== Google OAuth ====================
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=http://localhost:5001/auth/google/callback

# ==================== Rocket.Chat Integration ====================
# Rocket.Chat Server URL (with port)
# Examples:
#   - http://localhost:3000 (local development)
#   - https://chat.example.com (production)
#   - https://cloud.rocket.chat (Rocket.Chat Cloud)
ROCKETCHAT_URL=http://localhost:3000

# Rocket.Chat Admin Credentials (choose one authentication method)

# Option 1: Username and Password (will login to get token)
ROCKETCHAT_ADMIN_USER=admin
ROCKETCHAT_ADMIN_PASSWORD=admin-password-here

# Option 2: Pre-generated Token and User ID (recommended for production)
# Go to: Rocket.Chat Admin > Users > Generate Token
# Or create a Bot user and generate its token
ROCKETCHAT_ADMIN_TOKEN=your-admin-token-here
ROCKETCHAT_ADMIN_USER_ID=your-admin-user-id-here

# ==================== Backend API Configuration ====================
# ShowWise backend server URL for logging and organization config
BACKEND_API_URL=https://api.sfx-crew.com
BACKEND_API_KEY=your-backend-api-key-here

# ==================== Application Settings ====================
# Debug mode (set to False in production)
DEBUG=False

# Upload folder for files
UPLOAD_FOLDER=uploads

# Maximum file size for uploads (in bytes, default 16MB)
MAX_CONTENT_LENGTH=16777216
